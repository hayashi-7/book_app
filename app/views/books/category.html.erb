
<%if @books.present?%>
<% @books.each do |book| %>
  <%= book.name %>
   <%= image_tag book.image , class: 'book-img'%>
     
      <%= link_to book_path(book.id), method: :get do %>
   
    
    <%= book.price%>円
    <%= book.author%>
    <%= book.category[:name] %>
     <% end %>
     <%end%>
     <%else%>

     選択したカテゴリーに該当する投稿はありません
  <%end%>
  <br>
<%= link_to 'トップページへ戻る', root_path %>
 
 


