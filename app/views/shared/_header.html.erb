<header class='site-header'>
 <%= search_form_for @p, url: search_books_path do |f| %>
  
  <%= f.search_field :title_cont, placeholder: 'キーワードを入力'%>
  <%= f.submit '検索' %>
<% end %>
<%= link_to "bookapp", root_path, class:"mokuji"%>
<% if user_signed_in? %>
<%= link_to "マイページ", user_path(current_user.id) %>
<%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
<%= link_to '投稿する', new_book_path %>
<% else %>
<%= link_to '登録', new_user_registration_path %>
<%= link_to 'ログイン', new_user_session_path, class: "btn btn--orange btn--radius"%>
<%end %>
</header>